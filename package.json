{
  "name": "chin",
  "version": "3.0.9",
  "repository": "chinjs/chin",
  "author": "kthjm <toxictoxer@gmail.com>",
  "license": "MIT",
  "main": "main.js",
  "bin": "chin.js",
  "description": "Simple build tool that matches and processes files with extension instead of regexp.",
  "keywords": [
    "chin",
    "build tool",
    "builder",
    "assets",
    "cli"
  ],
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "pretest": "flow",
    "test": "cross-env BABEL_ENV=TEST nyc mocha",
    "build": "cross-env BABEL_ENV=BUILD rollup -c",
    "coverage": "nyc report --reporter=lcov && codecov"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.3",
    "commander": "^2.11.0",
    "consola": "^1.3.0",
    "figures": "^2.0.0",
    "fs-extra": "^4.0.1",
    "ora": "^1.3.0",
    "recursive-readdir": "^2.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "codecov": "^3.0.0",
    "cross-env": "^5.0.5",
    "flow-bin": "^0.59.0",
    "flow-typed": "^2.1.5",
    "mocha": "^4.0.0",
    "mock-fs": "^4.4.2",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.1.0",
    "power-assert": "^1.4.4",
    "rollup": "^0.58.2",
    "rollup-plugin-auto-external": "^1.2.0",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-prettier": "^0.4.0"
  }
}
